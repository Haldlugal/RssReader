<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/showRssListButton"
        style="@style/channelScreenButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showRssListBtnText" />

    <Button
        android:id="@+id/goToAddingChannelsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/channelScreenButtons"
        android:text="@string/addNewChannelBtnText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:background="@color/separationLineColor"
        >
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channelsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>